[user]
    name = neumann-mlucas
    email = neumann.m.lucas@gmail.com
[core]
    editor = nvim
    pager = delta
[credential]
    helper = store
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[alias]
    amend = commit --amend --no-edit
    branches = branch -a
    flog = log --follow --
    glog = log --all --decorate --oneline --graph
    last = log =1 HEAD --stat
    stashes = stash list
    tags = tag -n --list
    undo = reset --soft HEAD~1
    wdiff = diff --word-diff
