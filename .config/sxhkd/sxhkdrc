# Launch Applications

super + Return
    kitty
super + shift + Return
    rofi -show calc -modi calc -no-show-match -no-sort
super + b
    [[ "$(whoami)" == "neumann" ]] && brave || chromium
super + shift + b
    menu-surfraw
super + ctrl + c
    rofi-wifi-menu
super + shift + c
    rofi-bluetooth
super + d
	rofi -modi drun -show-icons -show
super + shift + d
	rofi -modi drun -show-icons -show window  
super + z
    zeal

# Desktop Utilities

super + p
    scrot -e 'mv $f ~/Pictures'
super + shift + p
    scrot --focused -e 'mv $f ~/Pictures'
super + r
    GoSpeedRead
super + shift + r
    flite -voice slt --setf duration_stretch=0.8 "$(xclip -o)"
    # tts --pipe_out --text "$(xclip -o)" | mplayer -speed 2 -really-quiet -cache-min 10 -cache 1024 -
super + y
    clipmenu

# Media keys

XF86AudioMute
    change_volume.sh mute

XF86AudioLowerVolume
    change_volume.sh -5%

XF86AudioRaiseVolume
    change_volume.sh +5%

XF86AudioMicMute
    pactl set-sink-mute 1 toggle

XF86MonBrightnessDown
    xbacklight -dec 20

XF86MonBrightnessUp
    xbacklight -inc 20

XF86Bluetooth
    connect_bluetooth.sh >/dev/null 

XF86Favorites
    toggle_keybord_layout.sh

#
# WM related
#

# power menu/quit
super + alt + q
    rofi -show power-menu -modi power-menu:rofi-power-menu

# restart BSPWM
super + alt + r
    bspc wm -r

# close and kill
super + {_,shift + }q
    bspc node -{c,k}


#
# layouts/state
#

# swap the current node and the biggest window
super + s
    bspc node -s biggest.local

# swap last focus node
super + S
    bspc node -s last.local

# toggle between the tiled and monocle layout
super + m
    bspc desktop -l next

# toggle between the tall and tiled layouts
super + alt + t
    bsp-layout next --layouts tall,tiled

# toggle between wide and tiled layouts
super + alt + w
    bsp-layout next --layouts wide,tiled

# set the window state
super + {t,shift + t,f,shift + f}
    bspc node -t {tiled,pseudo_tiled,fullscreen,floating}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the last node/desktop
super + {_,shift + }Tab
    bspc {desktop,node} -f last

# select windows to focus 
super + {Escape,grave}
	rofi -modi drun -show-icons -show window  

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + shift + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + shift + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# Smarth resize
super + ctrl + {h,j,k,l}
  n=10; \
  { d1=left;   d2=right;  dx=-$n; dy=0;   \
  , d1=bottom; d2=top;    dx=0;   dy=$n;  \
  , d1=top;    d2=bottom; dx=0;   dy=-$n; \
  , d1=right;  d2=left;   dx=$n;  dy=0;   \
  } \
  bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy
