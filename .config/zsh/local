# activate brew
eval "$(/Users/lneumann/homebrew/bin/brew shellenv)"
chmod -R go-w "$(brew --prefix)/share/zsh"

# conda initialize
__conda_setup="$('/opt/anaconda3/bin/conda' 'shell.bash' 'hook' 2>/dev/null)"
if [ $? -eq 0 ]; then
  eval "$__conda_setup"
else
  if [ -f "/opt/anaconda3/etc/profile.d/conda.sh" ]; then
    . "/opt/anaconda3/etc/profile.d/conda.sh"
  else
    export PATH="/opt/anaconda3/bin:$PATH"
  fi
fi
unset __conda_setup

export PYTHONPATH="/Users/lneumann/Git/mars:/Users/lneumann/Git/origin:$PYTHONPATH"
export PATH="/Users/lneumann/.local/bin:$PATH"

alias ls='eza'
alias ls='ls -h --color=always'
alias lint='ruff check --select E,F,W,I,RUF022 --ignore E731,E741,E501 --fix && black .'

# Source autosuggestions
source $(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh

# Load syntax-highlighting; should be last.
source $(brew --prefix)/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh #2>/dev/null

# Source history completion; should be after zsh-syntax-highlighting
source $(brew --prefix)/share/zsh-history-substring-search/zsh-history-substring-search.zsh

alias cdmarkit='cd /Volumes/bw/BWGI/FUNDOS/Operations/1_Operations_Files/MarkitWire/trade_file'
alias cdmars='cd /Volumes/bw/BWGI/Pricing/004.projetos/001.MARS'
alias cdmars_outlog='cd /Volumes/bw/BWGI/Pricing/004.projetos/001.MARS/005.outlog_files'
alias cdmars_inp='cd /Volumes/bw/BWGI/Pricing/004.projetos/001.MARS/001.csv_uploader_samples/automated'
alias cdmars_out2='cd /Volumes/bw/BWGI/Pricing/004.projetos/001.MARS/007.prices_feeders'
alias cdmars_out1='cd /Volumes/bw/BWGI/Pricing/004.projetos/001.MARS/008.pricing_files'
